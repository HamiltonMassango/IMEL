<!DOCTYPE html>
<html lang="pt">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>IMEL</title>

  <link href="../../fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="../../css/imel.css" rel="stylesheet">

</head>

<body id="page-top">

  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-m sidebar sidebar-dark accordion" id="accordionSidebar">

      <!-- Sidebar - logo -->
      <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/cordenacao/cordenador">
        <div class="sidebar-brand-icon ">
          <!-- <img class="logo" src="img/log.png" alt=""> -->
          IMEL
        </div>
      </a>

      <!-- Divisão -->
      <hr class="sidebar-divider my-0">

      <!-- Nav Item - Dashboard -->
      <li class="nav-item active">
        <a class="nav-link" href="/cordenacao/cordenador">
          <i class="fas fa-fw fa-tachometer-alt"></i>
          <span>Cordenador</span></a>
      </li>

      <hr class="sidebar-divider">

      <li class="nav-item active">
        <a class="nav-link" href="/cordenacao/cadastrar">
          <i class="fas fa-fw fa-user-graduate"></i>
          <span>Cadastrar</span></a>
      </li>

      <hr class="sidebar-divider my-0">

      <li class="nav-item active">
        <a class="nav-link" href="/cordenacao/lancar-nota">
          <i class="fas fa-fw fa-calendar-alt"></i>
          <span>Lançar nota</span></a>
      </li>

    </ul>
    <!-- fim of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-m topbar mb-4 static-top shadow">

          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">

            <!-- Nav Item - notificações -->
            <li class="nav-item dropdown no-arrow mx-1">
              <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-bell fa-fw"></i>
                <span class="badge badge-danger badge-counter">1+</span>
              </a>

              <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
                aria-labelledby="alertsDropdown">
                <h6 class="dropdown-header">
                  notificações
                </h6>

                <a class="dropdown-item d-flex align-items-center" href="#">
                  <div class="mr-3">
                    <div class="icon-circle bg-warning">
                      <i class="fas fa-exclamation-triangle text-white"></i>
                    </div>
                  </div>
                  <div>
                    <div class="small text-gray-500">Agosto 09, 2020</div>
                    Fazer troca de curso.
                  </div>
                </a>
                <a class="dropdown-item text-center small text-gray-500" href="#">Mais notificações</a>
              </div>
            </li>

            <div class="topbar-divider d-none d-sm-block"></div>

            <!-- Nav Item - Informação do usuario -->
            <li class="nav-item dropdown no-arrow">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <span class="mr-2 d-none d-lg-inline text-white-600 small" value="">Delfin Pina</span>
                <img class="img-profile rounded-circle" src="">
              </a>
              <!-- Dropdown - Informação do usuario -->
              <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                <a class="dropdown-item" href="perfil.html">
                  <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                  Perfil
                </a>

                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                  <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                  Logout
                </a>
              </div>
            </li>

          </ul>

        </nav>
        <!-- fim do Topbar -->

        <!-- inicio da Pag. de Conteúdo -->
        <div class="container-fluid">

          <!-- ACTIONS -->
          <section id="action" class="py-4 mb-4 bg-light">
            <div class="container">
              <div class="row">
                <div class="col-md-3 mr-auto">
                  <a href="/cordenacao/cadastrar" class="btn btn-light btn-block">
                    <i class="fa fa-arrow-left"></i> Voltar para Inicio
                  </a>
                </div>
                <div class="col-md-3">
                  <a href="#" class="btn btn-success btn-block">
                    <i class="fa fa-check"></i> Savar mudanças
                  </a>
                </div>
              </div>
            </div>
          </section>

          <!-- POSTS -->
          <div class="row">
            <div class="col-md-3">
              <h4>Fotografia do aluno</h4>
              <img class="imgAvatar" src="http://localhost:3000/<%- result[0].photoAvatar %>" alt="" class="d-block img-fluid mb-3">
            </div>
            <div class="col-md-9">
              
              <form action="">
                <section id="posts">
                  <div class="container">
                    <div class="row">
                      <div class="col">
                        <div class="card">
                          <div class="card-header">
                            <h4>Editar dados</h4>
                          </div>
                          <div class="card-body">
                            <form>
                              <div class="row">
                                <div class="col-md-6">
                                  <div class="form-group">
                                    <label for="name">Nome</label>
                                    <input type="text" class="form-control" value="<%- result[0].nome %>">
                                  </div>
                                </div>
                                <div class="col-md-6">
                                  <div class="form-group">
                                    <label for="bi">Bi</label>
                                    <input type="text" class="form-control" value="<%- result[0].bi %>">
                                  </div>
                                </div>
                              </div>
                              
                              
                              <div class="row">
                                <div class="form-group col-md-4">
                                  <label for="file">BI Foto </label>
                                  <input type="file" name="photo" class="form-control-file" value="Oal.pdf">
                                  <small class="form-text text-muted">Nº max 3mb</small>
                                </div>
                                <div class="col-md-4"></div>
                                <div class="col-md-4">
                                  <a href="http://localhost:3000/<%- result[0].photoBi %>" target="_blanck" class="btn btn-primary btn-block"> Ver BI</a>
                                </div>
                              </div>
                              
                              <div class="row">
                                <div class="col-md-6">
                                  <div class="form-group">
                                    <label for="title">Curso</label>
                                    <input type="text" class="form-control" value="Inforgest">
                                  </div>
                                </div>
                                <div class="col-md-6">
                                  <div class="form-group">
                                    <label for="classe">Classe</label>
                                    <input type="number" class="form-control" value="<%- result[0].classe %>">
                                  </div>
                                </div>
                              </div>
                              
                              <div class="row">
                              <div class="col-md-6">
                                <div class="form-group">
                                  <label for="sala">Sala</label>
                                  <input type="text" class="form-control" value="<%- result[0].sala %>">
                                </div>
                              </div>
  
                                <div class="col-md-6">
                                  <div class="form-group">
                                    <label for="nrAluno">Nº do aluno</label>
                                    <input type="number" class="form-control" value="<%- result[0].numero %>">
                                  </div>
                                </div>
                              </div>
      
                              <div class="row">
                                <div class="col-md-6">
                                  <div class="form-group">
                                    <label for="turno">Turno</label>
                                    <input type="text" class="form-control" value="<%- result[0].turno %>">
                                  </div>
                                </div>
  
                                <div class="col-md-6">
                                  <div class="form-group">
                                    <label for="turma">Turma</label>
                                    <input type="text" class="form-control" value="At">
                                  </div>
                                </div>
                              </div>
                              
      
                              <div class="form-group">
                                <label for="processo">Nº processo</label>
                                <input type="number" class="form-control" value="<%- result[0].id %>">
                              </div>
      
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </section>
              </form>

            </div>
          </div>
          

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- fim do Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; ABDJAM 2020</span>
          </div>
        </div>
      </footer>
      <!-- fim da Footer -->

    </div>
    <!-- fim do Content Wrapper -->

  </div>
  <!-- fim da Pag Wrapper -->

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Sair?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Selecionar "Logout" se quiseres terminar a sesão.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
          <a class="btn btn-primary" href="../../logo.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <script src="../../js/jquery.min.js"></script>
  <script src="../../js/bootstrap.bundle.min.js"></script>

</body>

</html>