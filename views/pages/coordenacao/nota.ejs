                            <td><a href="/cordenacao/nota" class="btn btn-secondary" data-toggle="modal" data-target="#addNotaModal">
                              <i class="fa fa-angle-double-right"></i> Lançar
                            </a></td>
                          </tr>
                          <tr role="row" class="odd">
                            <td class="sorting_1">Marcelino</td>
                            <td>AN</td>
                            <td>Noite</td>
                            <td>13</td>
                            <td><a href="/cordenacao/nota" class="btn btn-secondary" data-toggle="modal" data-target="#addNotaModal">
                              <i class="fa fa-angle-double-right"></i> Lançar
                            </a></td>
                          </tr>
                          <tr role="row" class="odd">
                            <td class="sorting_1">MIlton</td>
                            <td>AN</td>
                            <td>Noite</td>
                            <td>13</td>
                            <td><a href="/cordenacao/nota" class="btn btn-secondary" data-toggle="modal" data-target="#addNotaModal">
                              <i class="fa fa-angle-double-right"></i> Lançar
                            </a></td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          



        </div>
        <!-- /.container-fluid -->


        
      </div>
      <!-- fim do Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; ABJAM 2020</span>
          </div>
        </div>
      </footer>
      <!-- fim da Footer -->

    </div>
    <!-- fim do Content Wrapper -->

  </div>
  <!-- fim da Pag Wrapper -->

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Sair?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Selecionar "Logout" se quiseres terminar a sesão.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
          <a class="btn btn-primary" href="../logo.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

    <!-- Nota MODAL -->
    <div class="modal fade" id="addNotaModal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header bg-m text-white">
            <h5 class="modal-title">Lançar nota</h5>
            <button class="close" data-dismiss="modal"><span>&times;</span></button>
          </div>
          <div class="modal-body">
            <form method="" action="">
              <div class="form-group">
                <label for="title">Disciplina</label>
                <select class="form-control">
                  <option value="">Matemática</option>
                  <option value="">Programação</option>
                  <option value="">Banco de dados</option>
                </select>
              </div>
  
              <h3>Iº trimestre</h3>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="classe">1º Nota</label>
                    <input class="inp" type="number">
                  </div>
                </div>
                
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="sala">2º Nota</label>
                    <input class="inp" type="number">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label for="sala">Média</label>
                    <input class="inp" type="number">
                  </div>
                </div>
              </div>

              <hr>
              <h3>IIº trimestre</h3>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="classe">1º Nota</label>
                    <input class="inp" type="number">
                  </div>
                </div>
                
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="sala">2º Nota</label>
                    <input class="inp" type="number">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label for="sala">Média</label>
                    <input class="inp" type="number">
                  </div>
                </div>
              </div>

              <hr>

              <h3>IIIº trimestre</h3>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="classe">1º Nota</label>
                    <input class="inp" type="number">
                  </div>
                </div>
                
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="sala">2º Nota</label>
                    <input class="inp" type="number">
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="form-group">
                    <label for="sala">Média</label>
                    <input class="inp" type="number">
                  </div>
                </div>
              </div>

              <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button class="btn btn-primary" type="submit" >Cadastrar</button>
              </div>
            </form>
          </div>
          
        </div>
      </div>
    </div>

